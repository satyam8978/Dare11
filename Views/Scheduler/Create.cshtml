           $(".datepicker").dat({
               dateFormat: "dd-mm-yy  HH:mm",
               changemonth: true,
               changeyear: true,
               gotoCurrent: true
             

           });

       });
       $(".datepicker").datepicker("setDate", new Date());
    </script>
